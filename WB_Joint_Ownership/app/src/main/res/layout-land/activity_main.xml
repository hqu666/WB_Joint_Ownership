<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="5dp"
	tools:context="com.hijiyama_koubou.wb_joint_ownership.MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/connect_bt"
			android:layout_width="wrap_content"
			android:layout_height="42dp"
			android:text="@string/call_bt_caption2conect"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/conect_situation_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="@string/now_conection_meg"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvPartnerId"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/partner_id_titol"
					/>

				<TextView
					android:id="@+id/tvOwnId"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
					android:text="@string/my_id_titol"
					android:textAlignment="viewEnd"
					app:layout_constraintBottom_toTopOf="@+id/svRemoteView"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toLeftOf="@+id/btnAction"
					app:layout_constraintTop_toTopOf="parent"/>
			</LinearLayout>
		</LinearLayout>

		<!--<ImageButton-->
			<!--android:id="@+id/switchCameraAction"-->
			<!--android:layout_width="40dp"-->
			<!--android:layout_height="40dp"-->
			<!--android:src="@android:drawable/ic_menu_rotate"/>-->

		<ImageButton
			android:id="@+id/main_camera_bt"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@android:drawable/ic_menu_camera"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="240dp"
		android:layout_weight="1"
		android:orientation="horizontal">

	<!--<android.support.constraint.ConstraintLayout-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="wrap_content">-->

		<view
			android:id="@+id/svRemoteView"
			class="io.skyway.Peer.Browser.Canvas"
			android:layout_width="378dp"
			android:layout_height="match_parent"
			android:layout_gravity="top|left"
			android:layout_margin="2dp"
			/>
		<!--app:layout_editor_absoluteX="0dp"-->
		<!--tools:layout_editor_absoluteX="0dp"-->
		<!--tools:layout_editor_absoluteY="3dp"-->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<view
				android:id="@+id/svLocalView"
				class="io.skyway.Peer.Browser.Canvas"
				android:layout_width="match_parent"
				android:layout_height="108dp"
				android:layout_gravity="top|right|end"
				android:layout_weight="1"
				/>
			<!--tools:layout_editor_absoluteX="390dp"-->
			<!--tools:layout_editor_absoluteY="5dp"-->
			<com.hijiyama_koubou.wb_joint_ownership.CS_CanvasView
				android:id="@+id/main_whitebord"
				android:layout_width="match_parent"
				android:layout_height="108dp"
				android:layout_weight="1"
				/>
			<!--app:layout_constraintEnd_toEndOf="parent"-->
			<!--tools:layout_editor_absoluteY="122dp"-->
		</LinearLayout>

		<!--</android.support.constraint.ConstraintLayout>-->

	</LinearLayout>

	<include
		layout="@layout/activity_bottom_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal|end"
		android:layout_weight="1"/>
</LinearLayout>


<!--</android.support.constraint.ConstraintLayout>-->
