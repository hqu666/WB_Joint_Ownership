<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.hijiyama_koubou.wb_joint_ownership.MainActivity">

	<!--<ViewFlipper-->
	<!--android:id="@+id/flipper"-->
	<!--android:layout_width="match_parent"-->
	<!--android:layout_height="match_parent"-->
	<!--android:layout_margin="0dp"-->
	<!--<include-->
	<!--android:id="@+id/page1"-->
	<!--layout="@layout/vchat_tisement"-->
	<!--<include-->
	<!--android:id="@+id/page2"-->
	<!--layout="@layout/wb_tisement"/>-->
	<!--</ViewFlipper>-->

	<android.support.v7.widget.Toolbar
		android:id="@+id/main_tool_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"
		android:theme="?attr/actionBarTheme">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			>

			<LinearLayout
				android:id="@+id/main_conect_ll"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="left"
				android:layout_weight="1"
				android:orientation="horizontal">

				<Button
					android:id="@+id/connect_bt"
					android:layout_width="wrap_content"
					android:layout_height="40dp"
					android:text="@string/call_bt_caption2conect"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:id="@+id/conect_situation_tv"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/now_conection_meg"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/tvPartnerId"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/partner_id_titol"/>

						<TextView
							android:id="@+id/tvOwnId"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="5dp"
							android:text="@string/my_id_titol"
							android:textAlignment="viewEnd"
							app:layout_constraintBottom_toTopOf="@+id/svRemoteView"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintRight_toLeftOf="@+id/btnAction"
							app:layout_constraintTop_toTopOf="parent"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<include
				layout="@layout/whit_bord_cp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>

			<!--<TextView-->
				<!--android:id="@+id/wb_info_tv"-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="match_parent"-->
				<!--android:layout_weight="1"-->
				<!--android:gravity="center_vertical"-->
				<!--android:maxLines="2"-->
				<!--android:singleLine="false"-->
				<!--android:text="TextView"-->
				<!--android:textAlignment="gravity"-->
				<!--android:textSize="12sp"/>-->

			<ImageButton
				android:id="@+id/wb_all_clear_bt"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:layout_gravity="right|end"
				android:src="@android:drawable/ic_menu_delete"/>

			<ImageButton
				android:id="@+id/main_mode_change_bt"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="right"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="5dp"
				android:adjustViewBounds="false"
				android:src="@drawable/mode_selector"/>

		</LinearLayout>

	</android.support.v7.widget.Toolbar>

	<LinearLayout
		android:id="@+id/main_views_ll"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal">

		<view
			android:id="@+id/svRemoteView"
			class="io.skyway.Peer.Browser.Canvas"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="top|left"
			android:layout_marginRight="2dp"
			android:layout_weight="1"
			android:gravity="top|left"/>
		<!--app:layout_editor_absoluteX="0dp"-->
		<!--tools:layout_editor_absoluteX="0dp"-->
		<!--tools:layout_editor_absoluteY="3dp"-->

		<view
			android:id="@+id/svLocalView"
			class="io.skyway.Peer.Browser.Canvas"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="top|right"
			android:gravity="top|right"/>
		<!--android:layout_weight="1" を外して全画面へ広げる-->
		<!--class="com.hijiyama_koubou.wb_joint_ownership.CS_CanvasView"-->
		<!--class="io.skyway.Peer.Browser.Canvas"-->
		<!--</android.support.constraint.ConstraintLayout>-->

	</LinearLayout>


</LinearLayout>

	<!--</android.support.constraint.ConstraintLayout>-->
